<h1>My tasks</h1>
<%= link_to "New task", new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
  	  <% if task.completed %>
        <input type="checkbox" checked="checked" id="task.id" name="<%= task.title %>" value="<%= task.title %>">
      <% else %>
        <input type="checkbox" id="task.id" name="<%= task.title %>" value="<%= task.title %>">
      <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete #{task.title}", 
		task_path(task), 
		method: :delete, 
		data: { confirm: "Are you sure you want to delete #{task.title}?"} %>
    </li>
  <% end %>
</ul>
